[core]
	excludesfile = ~/.gitignore_global
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[alias]
    dt = difftool
    mt = mergetool
[mergetool]
    prompt = false
    keepBackup = false
    bc3 = trustExitCode
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
    cmd = $HOME/Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[diff]
    tool = bc3
[difftool]
    prompt = false
    bc3 = trustExitCode
[merge]
    tool = bc3
